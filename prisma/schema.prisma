datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model bp_entry {
  id            String    @id              @default(uuid())    @db.Uuid
  createdAt     DateTime  @default(now())  @db.Timestamptz
  updatedAt     DateTime  @updatedAt       @db.Timestamptz
  diastolic     Int
  systolic      Int
  heartrate     Int
}

model water_entry {
  id            String    @id              @default(uuid())    @db.Uuid
  createdAt     DateTime  @default(now())  @db.Timestamptz
  updatedAt     DateTime  @updatedAt       @db.Timestamptz
  ml            Int
}
